extends base

block content
    main.main
        .card-container

            each place in places
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                                //-(src=img/tours/${place.imageCover}`, alt=`${place.name}`)
                            img.card__picture-img(src=`/img/places/${place.imageCover}`  alt=`${place.name}`)
                        h3.heading-tertirary
                            span= place.name

                    .card__details
                        //-` Feeling - ${place.mood} ?`
                        h4.card__sub-heading Lorem ipsum - mood
                        //- place.summary
                        p.card__text Lorem ipsum - summary
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-map-pin')
                            span= place.location
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-calendar')
                                //- place.startDates[0].toLocaleString('fr', {day: 'short', month: 'long', year: 'numeric'})
                            span= place.fulladdress
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-flag')
                            span=place.website
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-user')
                            span= Intl.DateTimeFormat('fr-FR' ,{year: "numeric", month: "long", day: "numeric"}).format(place.createdAt)

                    .card__footer
                        p
                            span.card__footer-value $297
                            span.card__footer-text per person
                        p.card__ratings
                            span.card__footer-value= place.rating
                            span.card__footer-text= `rating (${place.reviews})`
                        a.btn.btn--green.btn--small(href=`/place/${place.slug}`) Details
